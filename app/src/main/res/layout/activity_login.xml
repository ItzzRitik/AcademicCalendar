<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#000"
    tools:context=".Login">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/parentPanel">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardElevation="0dp"
            app:cardCornerRadius="10dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@mipmap/back"/>
        </android.support.v7.widget.CardView>
        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/logo_div"
            android:visibility="gone"
            android:background="@drawable/logo_back"
            android:layout_centerInParent="true">
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/splash_cover"
            android:background="@drawable/round_app"
            android:layout_centerInParent="true">
        </RelativeLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3.5dp"
            android:id="@+id/ico_splash"
            android:layout_centerInParent="true"
            android:src="@drawable/logo"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:id="@+id/social_trigger">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="55dp"
                android:text="Swipe up to use social login"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:id="@+id/login_div"
            android:background="@drawable/login_tittle"
            android:layout_alignParentBottom="true">
            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="-2dp"
                android:textColor="#616161"
                android:backgroundTint="#fff"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/email"
                android:hint="Enter Your ID Number"
                android:inputType="textEmailAddress"
                android:textColorHint="#c7c7c7"
                android:maxLines="1"
                android:fontFamily="sans-serif"
                android:paddingEnd="30dp"
                android:paddingStart="10dp"/>
            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_alignEnd="@+id/email"
                android:layout_marginEnd="10dp"
                android:visibility="gone"
                android:id="@+id/email_reset"
                android:background="@drawable/login_tittle">
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:id="@+id/divider1"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_below="@+id/email"
                android:background="#616161"/>
            <EditText
                android:id="@+id/pass"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/email"
                android:layout_marginStart="5dp"
                android:textColor="#616161"
                android:drawablePadding="10dp"
                android:backgroundTint="#fff"
                android:drawableStart="@drawable/password_ok"
                android:hint="Enter Your Password"
                android:visibility="gone"
                android:enabled="false"
                android:fontFamily="sans-serif"
                android:inputType="textPassword"
                android:textColorHint="#c7c7c7"
                android:maxLines="1"
                android:paddingEnd="100dp"
                android:paddingStart="10dp"/>
            <TextView
                android:layout_width="85dp"
                android:layout_height="30dp"
                android:id="@+id/signin"
                android:text="Next"
                android:textSize="11sp"
                android:textAllCaps="true"
                android:textColor="#ff611c"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/signin"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="15dp"/>
            <ProgressBar
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:id="@+id/nextLoad"
                android:layout_alignEnd="@+id/signin"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="4dp"
                android:layout_marginEnd="-4.5dp"
                android:visibility="gone"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
