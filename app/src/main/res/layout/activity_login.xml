<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#000"
    tools:context=".Login">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/parentPanel">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardElevation="0dp"
            app:cardCornerRadius="10dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@mipmap/back"/>
        </android.support.v7.widget.CardView>
        <RelativeLayout
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:id="@+id/logo_div"
            android:visibility="gone"
            android:background="@drawable/logo_back"
            android:layout_centerInParent="true">
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/splash_cover"
            android:background="@drawable/round_app"
            android:layout_centerInParent="true">
        </RelativeLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3.5dp"
            android:id="@+id/ico_splash"
            android:layout_centerInParent="true"
            android:src="@drawable/logo"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:id="@+id/login_div"
            android:background="@drawable/login_tittle"
            android:layout_alignParentBottom="true">
            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="-2dp"
                android:textColor="#616161"
                android:backgroundTint="#fff"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/id"
                android:hint="Enter Your ID Number"
                android:inputType="textEmailAddress"
                android:textColorHint="#c7c7c7"
                android:maxLines="1"
                android:fontFamily="sans-serif"
                android:paddingEnd="30dp"
                android:paddingStart="10dp"/>
            <TextView
                android:layout_width="85dp"
                android:layout_height="30dp"
                android:id="@+id/signin"
                android:text="Login"
                android:textSize="11sp"
                android:textAllCaps="true"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/signin"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="15dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_alignParentTop="true"
                android:id="@+id/title"
                android:background="@drawable/login_tittle_accent"
                android:elevation="8dp"
                android:visibility="gone">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:textSize="18sp"
                    android:id="@+id/heading"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="45dp"
                android:background="@color/colorPrimary"
                android:visibility="gone"
                android:id="@+id/adminPane">
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#fff">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="9sp"
                        android:id="@+id/data"/>
                </ScrollView>
                <TextView
                    android:layout_width="185dp"
                    android:layout_height="35dp"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:id="@+id/upload"
                    android:textSize="16sp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:textColor="@color/colorAccent"
                    android:background="@drawable/signin"
                    android:text="UPLOAD CALENDER"/>
                <ProgressBar
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:id="@+id/nextLoad"
                    android:visibility="gone"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
